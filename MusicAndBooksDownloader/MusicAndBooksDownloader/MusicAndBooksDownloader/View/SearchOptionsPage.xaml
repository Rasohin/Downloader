<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicAndBooksDownloader.View.SearchOptionsPage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="White">
            <TableView>
                <TableView.Root>
                    <TableRoot>
                        <TableSection Title="Search options">
                            <SwitchCell On="True" x:Name="switch1" Text="Zaicev.Net"/>
                            <SwitchCell On="True" x:Name="switch2" Text="AnotherSites"/>
                        </TableSection>
                    </TableRoot>
                </TableView.Root>
            </TableView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>