<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicAndBooksDownloader.MainPage" Title="Music and Books search">

    
    <StackLayout BackgroundColor="White">
        <Button BackgroundColor="Orange" WidthRequest="250" Text="Music"
                HorizontalOptions="Center" VerticalOptions="CenterAndExpand"
                HeightRequest="120" Command="{Binding startMusicPage}"/>
        <Button BackgroundColor="Orange" WidthRequest="250" Text="Books"
                HorizontalOptions="Center" VerticalOptions="CenterAndExpand"
                HeightRequest="120" Command="{Binding startBooksPage}"/>
        <Button BackgroundColor="Orange" WidthRequest="250" Text="AudioBooks"
                HorizontalOptions="Center" VerticalOptions="CenterAndExpand"
                HeightRequest="120" Command="{Binding startAudioBooksPage}"/>
    </StackLayout>

</ContentPage>
